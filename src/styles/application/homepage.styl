#homepage
  letter-spacing 2px
  h2
    color orange
    font-size 1.563em
    text-transform uppercase
    font-weight bold
    margin-bottom .4em
    letter-spacing 2.23px
  .button
    padding 0.3em 1em 0.45em
  #hola
    display flex
    justify-content space-between
    align-items center
    width 60%
    margin 3em auto 2em
    h1
      color orange
      font-weight bold
      font-size 1.875em
      margin-bottom 1.2em
    p
      margin-bottom 1.2em
      line-height 1.188em
      width 90%
      min-width 300px
    .main-image
      background-image url('/static/images/homepage/hola.png')
      background-size contain
      background-repeat no-repeat
      width 180%
      min-width 340px
      min-height 400px
    +below(1000px)
      margin 0 auto
      width 80%
      p
        width 100%
    +below(875px)
      flex-wrap wrap
      margin-bottom 2em
      .main-image
        width 100%
        margin 0 auto
        display block
  #search
    width 739px
    margin 0 auto
    h2
      color blue
      margin-bottom 1em
      text-transform inherit
    #sort
      width auto
      box-sizing border-box
      .radio-group
        min-width 300px
    +below(875px)
      width 80%
      #sort
        width 90%
        padding-left 5%
        padding-right 5%
        flex-wrap wrap
      .radio-group
        width 100%
        display block
        margin-bottom 1.5em
        &:last-child
          margin-bottom 0
      input[type="submit"]
        margin 0 auto
        width 100%
  #trends,
  #display
    h3
      color orange
      text-transform uppercase
      font-size 1.563em
      font-weight bold
      margin-bottom .5em
  #trends
    width 60%
    margin 2em auto
    p
      line-height 1.2
    .recipes
      display flex
      justify-content space-between
      margin-top 1.5em
      .recipe
        width 45%
        text-align center
        img
          width 100%
          height 300px
          border-radius 5px
          object-fit cover
        .description
          position relative
          width 60%
          background-color #FFF
          left 50%
          border-radius 5px
          box-shadow 0 0 40px 0 rgba(0, 0, 0, .2)
          transform translate(-50%, -50%)
          padding 1em .4em
          p
            margin-bottom 1em
            overflow hidden
            text-overflow ellipsis
            word-wrap break-word
            display block
            line-height 16px
            max-height 33px
            padding 0 .2em
    +below(1024px)
      width 80%
    +below(875px)
      .recipes
        flex-wrap wrap
        .recipe
          width 100%
  #display
    width 70%
    margin 2em auto
    .recipes
      display flex
      flex-wrap wrap
      justify-content space-between
      margin-top 1.5em
      .recipe
        width 30%
        text-align center
        border-radius 5px
        transition box-shadow .2s
        margin-bottom 2em
        border-radius 5px
        &:hover
          box-shadow 0 0 40px 0 rgba(0, 0, 0, .2)
        h3
          margin .4em
        p
          margin-bottom 1em
          overflow hidden
          text-overflow ellipsis
          word-wrap break-word
          display block
          line-height 16px
          max-height 33px
          padding 0 .2em
        .image-container
          width 100%
          padding-bottom 100%
          overflow hidden
          position relative
          border-radius 5px
          img
            position absolute
            left 50%
            transform translateX(-50%)
            width auto
            min-width 100%
            height 100%
        .button
          margin-bottom 1em
    +below(1024px)
      width 80%
    +below(875px)
      .recipes .recipe
        width 100%
        max-width none
        box-shadow 0 2px 20px 0 rgba(black, .2)
        display flex
        flex-wrap nowrap
        align-items center
        justify-content space-between
        min-height 170px
        img
          height 100%
        a
          display block
          order 3
          min-width 110px
          margin 1em auto
        .description
          max-width 400px
          margin 0 auto
          padding 0 5%
        .image-container
          display inline-block
          width 140px
          height 140px
          margin-right 15px
          padding-bottom 0
          order 4
        h3
          order 1
        p
          order 2
          margin-top 0
  #bread
    position absolute
    right 0
    top 100vh
    background-image url('/static/images/homepage/bread.png')
    width 350px
    height 450px
    background-repeat no-repeat
    background-size contain
    background-position right
    z-index -1
    +below(1200px)
      display none
  #plate
    position absolute
    left 0
    top 150vh
    transform translateX(-50%) rotate(180deg) rotateY(180deg)
    background-image url('/static/images/about/plate.png')
    width 660px
    height 635px
    background-repeat no-repeat
    background-size contain
    background-position left
    z-index -1
    +below(1200px)
      display none
