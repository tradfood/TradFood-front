.container
  width 65%
  margin 0 auto 2em
  #recipe
    margin-top 10em
    .recipe-image
      position absolute
      z-index 2
      transform translateY(-35%)
      img
        height 28vw
        width 28vw
        max-width 483px
        max-height 483px
        object-fit cover
        margin-left 3.5em
        border-radius 5px
    .recipe-details
      background-color #FFF
      box-shadow rgba(0, 0, 0, .10) 0 9px 20px 0
      padding 3.5em
      padding-top 2.5em
      position relative
      letter-spacing 2.31px
      h1
        color orange
        font-size 1.9em
        letter-spacing 3px
        font-weight 900
        min-width 250px
        max-width 50%
        letter-spacing 5.67px
      h2
        color blue
        font-size 1.5em
        margin-bottom 1em
        letter-spacing 2.38px
    .recipe-title,
    .recipe-details__informations
      margin-left 29.5vw
    .recipe-description
      display none
    .recipe-title
      position absolute
      bottom calc(100% + .5em)
    .recipe-details__informations,
    .recipe-details__ingredients
      display inherit
      line-height  1.7em
    .recipe-details__informations
      color blue
    .recipe-details__ingredients
      margin-top 2em
      p
        display none
      ul
        display inline-flex
        flex-wrap wrap
      li
        width 50%
    .recipe-details__recipe
      margin-top 2em
      p
        margin-bottom .8em
  +above(1500px)
    max-width 1000px
    #recipe
      .recipe-image img
        max-width 430px
        max-height 430px
      .recipe-title,
      .recipe-content .recipe-details__informations
        margin-left 455px
      .recipe-content .recipe-details__ingredients
        margin-top 3em
  +below(1024px)
    width 80%
    #recipe .recipe-details h1
      max-width inherit
  +below(736px)
    width 100%
    #recipe .recipe-image img
      max-width inherit
  +below(667px)
    #recipe
      margin-top 3em
      .recipe-title,
      .recipe-details__informations
        margin-left 0
      .recipe-title
        position inherit
        text-align center
        margin-bottom 2em
      .recipe-details
        box-shadow none
      .recipe-image
        position inherit
        transform inherit
        img
          margin-left 0
          width 100%
          min-height 290px

#tomatoes
  position fixed
  right 0
  top 12vh
  background-image url('/static/images/recipe/tomatoes.png')
  width 650px
  height 835px
  background-size contain
  background-repeat no-repeat
  transform rotateZ(21deg)
  z-index -1
  +below(875px)
    display none
