footer
  width 75%
  margin 2em auto 0
  padding 2em 0 1em
  border-top 2px solid blue
  display flex
  justify-content space-around
  h2
    font-weight bold
    letter-spacing 2px
    margin-bottom 1em
  a
    display block
    margin-bottom 1em
    letter-spacing 1.5px
  div:first-child
    width 30%
  .social
    display flex
    justify-content space-between
    a
      width 1.75em
      height 1.75em
      background-repeat no-repeat
      background-size contain
      margin-bottom 0
      &.facebook
        background-image url('/static/images/icons/socials/facebook.svg')
      &.twitter
        background-image url('/static/images/icons/socials/twitter.svg')
      &.instagram
        background-image url('/static/images/icons/socials/instagram.svg')
  form
    .clear,
    .mc-field-group
      display inline-block
    .mc-field-group
      width 100%
    #mc_embed_signup_scroll
      display flex
      justify-content space-between
      width 100%
    input[type="email"]
      border 2px solid blue
      border-right none
      padding .6em .5em
      width 100%
    input[type="submit"]
      border-radius 0
      text-transform inherit
      background-color blue
      border-color blue
      border-width 2px
      letter-spacing 1.5px
      &:hover
        background-color transparent
        color blue
