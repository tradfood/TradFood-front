#recipes
  display flex
  width 65%
  flex-flow row wrap
  justify-content space-between
  margin .5em auto 0
  max-width 860px
  .no-recipe
    text-align center
    width 100%
    font-size 1.2em
    color orange
    margin-top 3em
  li
    width 19.5vw
    max-width 260px
    margin-bottom 1.7em
    a
      display flex
      flex-wrap wrap
      width 100%
    img
      width 100%
      height 19.5vw
      max-height 260px
      object-fit cover
      border-radius 5px
    .title
      display flex
      flex-wrap wrap
      justify-content center
      align-items center
      min-height 56px
      color orange
      font-size 1.75em
      text-align center
      padding-top 8px
      margin .2em 0
      font-weight 900
      text-transform uppercase
      letter-spacing 2px
      vertical-align middle
    .description
      display block
      font-size 1em
      text-align center
      line-height 1.3em
      margin-top 1em
      color black
    button
      display none
  +below(1024px)
    width 80%
    li
      width 21.5vw
      img
        height 21.5vw
  +below(875px)
    width 90%;
    li
      width 100%
      max-width none
      box-shadow 0 2px 20px 0 rgba(black, .2)
      a
        flex-wrap nowrap
        align-items center
        justify-content space-between
        min-height 170px
      img
        height 100%
      button
        display block
        order 3
        min-width 110px
        margin 1em auto
      .content
        max-width 390px
        margin 0 auto
      .img-wrap
        display inline-block
        width 140px
        height 140px
        margin-right 15px
        order 4
      .title
        order 1
      .description
        order 2
        margin-top 0
#pie
  position absolute
  right 0
  top 60vh
  background-image url('/static/images/city/pie.png')
  width 200px
  height 700px
  background-repeat no-repeat
  z-index -1
  +below(875px)
    display none
