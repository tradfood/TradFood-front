#sort
  display flex
  justify-content space-between
  width 40%
  margin 2em auto
  padding 2em
  border-radius 5px
  box-shadow 0 2px 20px 0 rgba(0, 0, 0, .1)
  h2
    margin-bottom 1.2em
  .radio-group
    display block
    input[type='radio']
      appearance none
      width 15px
      height 15px
      box-shadow inset 0 0 0 0.3em #fff, 0 0 0.1em
      border-radius 50%
      transition 0.2s
      cursor pointer
      color #363945
      margin 0 .6em 0 .4em
      vertical-align -3px
      &:checked
        background-color orange
        &+label
          display none
      &:checked,
      &:focus
        outline none
#recipes
  display flex
  width 65%
  flex-wrap wrap
  justify-content space-between
  margin .5em auto 0
  max-width 860px
  .no-recipe
    text-align center
    width 100%
    font-size 1.2em
    color orange
    margin-top 3em
  li
    width 19.5vw
    max-width 260px
    margin-bottom 1.7em
    img
      width 100%
      height 19.5vw
      max-height 260px
      object-fit cover
      border-radius 5px
    .title
      display flex
      flex-wrap wrap
      justify-content center
      align-items center
      min-height 56px
      color orange
      font-size 1.75em
      text-align center
      padding-top 8px
      margin .2em 0
      font-weight 900
      text-transform uppercase
      letter-spacing 2px
      vertical-align middle
    .description
      display block
      font-size 1em
      text-align center
      line-height 1.3em
      margin-top 1em
      color black
#pie
  position absolute
  right 0
  top 60vh
  background-image url('/static/images/city/pie.png')
  width 200px
  height 700px
  background-repeat no-repeat
