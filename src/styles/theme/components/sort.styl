#sort
  display flex
  justify-content space-between
  width 42.5%
  min-width 595px
  margin 2em auto
  padding 2em
  border-radius 5px
  box-shadow 0 2px 20px 0 rgba(0, 0, 0, .1)
  letter-spacing initial
  h2,
  h3
    margin-bottom 1.2em
  input[type='submit']
    align-self center
  .radio-group
    display block
    span
      display inline-flex
      align-items center
    label
      color middleGrey
    input[type='radio']
      appearance none
      width 15px
      height 15px
      box-shadow inset 0 0 0 0.3em #fff, 0 0 0.1em
      border-radius 50%
      transition 0.2s
      cursor pointer
      color #363945
      margin 0 1.2em 0 .5em
      order 2
      &:checked
        background-color orange
        &+label
          color black
          order 1
      &:checked,
      &:focus
        outline none
  +below(736px)
    min-width inherit
    width 85%
  +below(665px)
    flex-wrap wrap
    width 50%
    min-width 310px
    .radio-group
      width 100%
      margin-bottom 1.5em
      &:last-child
        margin-bottom 0
